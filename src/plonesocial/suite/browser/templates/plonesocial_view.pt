<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<body>

    <div metal:fill-slot="main">
    <metal:main-macro define-macro="main"
                      tal:define="kssClassesView context/@@kss_field_decorator_view;
                                  getKssClasses nocall:kssClassesView/getKssClassesInlineEditable;
                                  templateId template/getId">

        <div class="plonesocial activitystream">
          <tal:block replace="structure provider:plonesocial.activitystream.viewlets" />
        </div>

        <div class="managePortletsLink"
             tal:define="portal_state context/@@plone_portal_state;
                         portal_url portal_state/portal_url;
                         checkPermission nocall: context/portal_membership/checkPermission"
             tal:condition="python:checkPermission('Portlets: Manage portlets', context)">
          <a tal:attributes="href string:${portal_url}/@@manage-activitystreamportlets" title="View portlet management screen">Manage activity stream portlets</a>
        </div>

    </metal:main-macro>
    </div>

</body>
</html>
